<Window x:Class="CyberIncidentWPF.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Window" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="✅ WPF Uygulaması Çalışıyor!" 
                       FontSize="32" FontWeight="Bold" 
                       Foreground="Green" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Backend Testi:" 
                       FontSize="18" FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            
            <TextBlock x:Name="StatusText" 
                       Text="Test ediliyor..." 
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <Button Content="Backend Bağlantısını Test Et" 
                    Click="TestBackend_Click"
                    Background="#007ACC" 
                    Foreground="White"
                    Padding="20,10" 
                    FontSize="14"
                    Margin="0,0,0,10"/>
            
            <Button Content="Ana Uygulamayı Aç" 
                    Click="OpenMainWindow_Click"
                    Background="#28A745" 
                    Foreground="White"
                    Padding="20,10" 
                    FontSize="14"/>
            
            <TextBlock x:Name="ErrorText" 
                       Text="" 
                       FontSize="12"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       MaxWidth="500"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

