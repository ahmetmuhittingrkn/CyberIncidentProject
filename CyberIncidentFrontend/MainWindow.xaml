<Window x:Class="CyberIncidentWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CyberIncidentWPF.Views"
        mc:Ignorable="d"
        Title="Cyber Incident Reporting &amp; Analysis Platform" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F9FAFB">
    
    <Window.Resources>
        <!-- Value Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Null to Bool Converter -->
        <Style x:Key="NullToBoolConverter" TargetType="Button">
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Inverse Bool Converter Style -->
        <Style x:Key="InverseBoolConverter" TargetType="Button">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="10"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1F2937" Offset="0"/>
                    <GradientStop Color="#111827" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.3" Direction="0"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Title -->
                <Border Grid.Row="0" Padding="25,30,25,25">
                    <StackPanel>
                        <Border Background="#6366F1" CornerRadius="12" Padding="12" 
                                HorizontalAlignment="Center" Width="64" Height="64">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#6366F1" Opacity="0.5"/>
                            </Border.Effect>
                            <TextBlock Text="ðŸ›¡ï¸" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="CyberShield" FontSize="22" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                        <TextBlock Text="Security Operations Center" FontSize="12" 
                                   Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock Text="MENU" FontSize="11" FontWeight="Bold" 
                               Foreground="#6B7280" Margin="20,0,0,10"/>
                    
                    <Button Command="{Binding ShowIncidentListCommand}"
                            Style="{StaticResource NavButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="#E5E7EB"/>
                            <TextBlock Text="Incident List" VerticalAlignment="Center" Foreground="#E5E7EB"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ShowCreateIncidentCommand}"
                            Style="{StaticResource NavButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="#E5E7EB"/>
                            <TextBlock Text="Create Incident" VerticalAlignment="Center" Foreground="#E5E7EB"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ShowAnalyticsCommand}"
                            Style="{StaticResource NavButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="#E5E7EB"/>
                            <TextBlock Text="Analytics" VerticalAlignment="Center" Foreground="#E5E7EB"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Bottom Section -->
                <StackPanel Grid.Row="2" Margin="15,0,15,20">
                    <!-- Info Section -->
                    <Border Background="#374151" CornerRadius="12" Padding="18" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="System Status" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Ellipse Width="8" Height="8" Margin="0,0,8,0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#10B981" Offset="0"/>
                                            <GradientStop Color="#059669" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="Connected" FontSize="11" Foreground="#D1D5DB" FontWeight="Medium"/>
                            </StackPanel>
                            <TextBlock Text="localhost:8080" FontSize="10" 
                                       Foreground="#9CA3AF" FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>

                    <!-- Footer -->
                    <StackPanel>
                        <Separator Background="#374151" Margin="10,0,10,15"/>
                        <TextBlock Text="Version 1.0.0" FontSize="10" Foreground="#6B7280" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Â© 2024 CyberShield" FontSize="9" Foreground="#4B5563" 
                                  HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#F9FAFB" Padding="30,25">
            <ContentControl Content="{Binding CurrentView}">
                <ContentControl.Resources>
                    <Style TargetType="ContentControl">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="Content" Value="{x:Null}">
                                <Setter Property="Opacity" Value="0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Resources>
            </ContentControl>
        </Border>
    </Grid>
</Window>

