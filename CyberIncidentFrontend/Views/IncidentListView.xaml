<UserControl x:Class="CyberIncidentWPF.Views.IncidentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Incident Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Filters -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Search:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                </StackPanel>

                <!-- Type Filter -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                    <TextBlock Text="Type:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding IncidentTypes}" 
                              SelectedItem="{Binding SelectedType}" Padding="5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Severity Filter -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,10">
                    <TextBlock Text="Severity:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding SeverityLevels}" 
                              SelectedItem="{Binding SelectedSeverity}" Padding="5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Start Date -->
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,10,10">
                    <TextBlock Text="Start Date:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Padding="5"/>
                </StackPanel>

                <!-- End Date -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="End Date:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Padding="5"/>
                </StackPanel>

                <!-- Filter Buttons -->
                <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,10,0">
                    <Button Content="Apply Filters" Command="{Binding ApplyFiltersCommand}" 
                            Background="#007ACC" Foreground="White" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" 
                            Background="#6C757D" Foreground="White" Padding="15,5"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Row="1" Grid.Column="3" Content="Refresh" 
                        Command="{Binding LoadIncidentsCommand}" 
                        Background="#28A745" Foreground="White" Padding="15,5" 
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- Incidents DataGrid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Incidents}" 
                  SelectedItem="{Binding SelectedIncident}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="#F5F5F5"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IncidentId}" Width="60"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Type" Binding="{Binding IncidentType}" Width="150"/>
                <DataGridTextColumn Header="Severity" Binding="{Binding SeverityLevel}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="CRITICAL">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                                <Trigger Property="Text" Value="HIGH">
                                    <Setter Property="Foreground" Value="Orange"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="Text" Value="MEDIUM">
                                    <Setter Property="Foreground" Value="#FFA500"/>
                                </Trigger>
                                <Trigger Property="Text" Value="LOW">
                                    <Setter Property="Foreground" Value="Green"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="OPEN">
                                    <Setter Property="Foreground" Value="Blue"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="Text" Value="IN_PROGRESS">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </Trigger>
                                <Trigger Property="Text" Value="RESOLVED">
                                    <Setter Property="Foreground" Value="Green"/>
                                </Trigger>
                                <Trigger Property="Text" Value="CLOSED">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Date" Binding="{Binding IncidentDate, StringFormat=yyyy-MM-dd HH:mm}" Width="140"/>
                <DataGridTextColumn Header="Reporter" Binding="{Binding ReporterName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0">
            <Button Content="View Details" 
                    Command="{Binding ViewDetailsCommand}" 
                    CommandParameter="{Binding SelectedIncident}"
                    Background="#007ACC" Foreground="White" Padding="15,8" Margin="0,0,10,0"
                    IsEnabled="{Binding SelectedIncident, Converter={StaticResource NullToBoolConverter}}"/>
            
            <Button Content="Update Status â–¼" Background="#FFC107" Foreground="Black" 
                    Padding="15,8" Margin="0,0,10,0"
                    IsEnabled="{Binding SelectedIncident, Converter={StaticResource NullToBoolConverter}}">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="OPEN" Command="{Binding UpdateStatusCommand}" CommandParameter="OPEN"/>
                        <MenuItem Header="IN_PROGRESS" Command="{Binding UpdateStatusCommand}" CommandParameter="IN_PROGRESS"/>
                        <MenuItem Header="RESOLVED" Command="{Binding UpdateStatusCommand}" CommandParameter="RESOLVED"/>
                        <MenuItem Header="CLOSED" Command="{Binding UpdateStatusCommand}" CommandParameter="CLOSED"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            
            <Button Content="Delete Incident" 
                    Command="{Binding DeleteIncidentCommand}" 
                    CommandParameter="{Binding SelectedIncident.IncidentId}"
                    Background="#DC3545" Foreground="White" Padding="15,8"
                    IsEnabled="{Binding SelectedIncident, Converter={StaticResource NullToBoolConverter}}"/>
        </StackPanel>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Grid.RowSpan="4" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..." FontSize="20" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

