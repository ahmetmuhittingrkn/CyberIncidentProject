<UserControl x:Class="CyberIncidentWPF.Views.CreateIncidentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="3" BlurRadius="12" Opacity="0.3" Direction="270"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4338CA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="16" Padding="30,25" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="15" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âž•" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Create New Incident" FontSize="28" FontWeight="Bold" 
                               Foreground="#111827" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Report a new cybersecurity incident to the system" 
                           FontSize="14" Foreground="#6B7280" Margin="47,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,0,0">
            <Border Background="White" CornerRadius="16" Padding="35">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="15" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="ðŸ“ Title" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#6B7280" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,20"/>

                    <!-- Description -->
                    <TextBlock Text="ðŸ“„ Description" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#6B7280" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Height="140" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                             VerticalContentAlignment="Top"
                             Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,20"/>

                    <!-- Type and Severity -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Incident Type -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ›¡ï¸ Incident Type" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6B7280" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding IncidentTypes}" 
                                      SelectedItem="{Binding SelectedType}" 
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Padding="8,6" FontSize="14"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Severity Level -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="âš¡ Severity Level" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6B7280" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding SeverityLevels}" 
                                      SelectedItem="{Binding SelectedSeverity}" 
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Padding="8,6" FontSize="14"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Incident Date and Reporter ID -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Incident Date -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ“… Incident Date" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6B7280" Margin="0,0,0,8"/>
                            <DatePicker SelectedDate="{Binding IncidentDate}" 
                                        Style="{StaticResource ModernDatePickerStyle}"/>
                        </StackPanel>

                        <!-- Reporter ID -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ðŸ‘¤ Reporter ID" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="#6B7280" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding ReporterId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Type Descriptions -->
                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" 
                            CornerRadius="12" Padding="20" Margin="0,0,0,25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="â„¹ï¸" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Incident Type Descriptions" FontWeight="Bold" 
                                           FontSize="15" Foreground="#111827" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="22" Foreground="#374151">
                                <Run Text="â€¢ PHISHING:" FontWeight="SemiBold" Foreground="#111827"/> Phishing email or message attempts<LineBreak/>
                                <Run Text="â€¢ UNAUTHORIZED_ACCESS:" FontWeight="SemiBold" Foreground="#111827"/> Unauthorized system or data access<LineBreak/>
                                <Run Text="â€¢ MALWARE:" FontWeight="SemiBold" Foreground="#111827"/> Malware detection or infection<LineBreak/>
                                <Run Text="â€¢ DATA_BREACH:" FontWeight="SemiBold" Foreground="#111827"/> Data breach or leak<LineBreak/>
                                <Run Text="â€¢ DOS_ATTACK:" FontWeight="SemiBold" Foreground="#111827"/> Denial of Service attack<LineBreak/>
                                <Run Text="â€¢ SOCIAL_ENGINEERING:" FontWeight="SemiBold" Foreground="#111827"/> Social engineering attempt<LineBreak/>
                                <Run Text="â€¢ RANSOMWARE:" FontWeight="SemiBold" Foreground="#111827"/> Ransomware attack<LineBreak/>
                                <Run Text="â€¢ INSIDER_THREAT:" FontWeight="SemiBold" Foreground="#111827"/> Insider threat or suspicious activity<LineBreak/>
                                <Run Text="â€¢ OTHER:" FontWeight="SemiBold" Foreground="#111827"/> Other security incidents
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Command="{Binding CreateIncidentCommand}" 
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,15,0"
                                IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBoolConverter}}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âœ“" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Create Incident" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        
                        <Button Command="{Binding ClearFormCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBoolConverter}}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â†º" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Clear Form" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <!-- Required Fields Note -->
                    <TextBlock Text="* Required fields" FontStyle="Italic" 
                               Foreground="#9CA3AF" Margin="0,20,0,0" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#CC000000" 
              Visibility="{Binding IsSubmitting, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" CornerRadius="16" Padding="50,40" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="30" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="âž•" FontSize="56" HorizontalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="LoadingScale" CenterX="28" CenterY="28" ScaleX="1" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       From="1" To="1.2" Duration="0:0:0.8" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="LoadingScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       From="1" To="1.2" Duration="0:0:0.8" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="Creating Incident..." FontSize="20" FontWeight="Bold" 
                               Foreground="#111827" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <TextBlock Text="Please wait while we process your request" FontSize="13" Foreground="#6B7280" 
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

