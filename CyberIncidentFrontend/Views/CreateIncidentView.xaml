<UserControl x:Class="CyberIncidentWPF.Views.CreateIncidentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create New Incident" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="30">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Title *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" Margin="0,0,0,15" FontSize="14"/>

                    <!-- Description -->
                    <TextBlock Text="Description *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Height="120" Padding="8" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                             Margin="0,0,0,15" FontSize="14"/>

                    <!-- Type and Severity -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Incident Type -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Incident Type *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding IncidentTypes}" 
                                      SelectedItem="{Binding SelectedType}" 
                                      Padding="8" FontSize="14"/>
                        </StackPanel>

                        <!-- Severity Level -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Severity Level *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding SeverityLevels}" 
                                      SelectedItem="{Binding SelectedSeverity}" 
                                      Padding="8" FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Incident Date and Reporter ID -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Incident Date -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Incident Date *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding IncidentDate}" Padding="8" FontSize="14"/>
                        </StackPanel>

                        <!-- Reporter ID -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Reporter ID *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ReporterId, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Type Descriptions -->
                    <Border Background="#F8F9FA" BorderBrush="#DDD" BorderThickness="1" 
                            CornerRadius="5" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Incident Type Descriptions:" FontWeight="Bold" 
                                       Margin="0,0,0,10" FontSize="14"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" LineHeight="18">
                                <Run Text="• PHISHING:" FontWeight="SemiBold"/> Phishing email or message attempts<LineBreak/>
                                <Run Text="• UNAUTHORIZED_ACCESS:" FontWeight="SemiBold"/> Unauthorized system or data access<LineBreak/>
                                <Run Text="• MALWARE:" FontWeight="SemiBold"/> Malware detection or infection<LineBreak/>
                                <Run Text="• DATA_BREACH:" FontWeight="SemiBold"/> Data breach or leak<LineBreak/>
                                <Run Text="• DOS_ATTACK:" FontWeight="SemiBold"/> Denial of Service attack<LineBreak/>
                                <Run Text="• SOCIAL_ENGINEERING:" FontWeight="SemiBold"/> Social engineering attempt<LineBreak/>
                                <Run Text="• RANSOMWARE:" FontWeight="SemiBold"/> Ransomware attack<LineBreak/>
                                <Run Text="• INSIDER_THREAT:" FontWeight="SemiBold"/> Insider threat or suspicious activity<LineBreak/>
                                <Run Text="• OTHER:" FontWeight="SemiBold"/> Other security incidents
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Create Incident" 
                                Command="{Binding CreateIncidentCommand}" 
                                Background="#28A745" Foreground="White" 
                                Padding="30,12" Margin="0,0,15,0" FontSize="14" FontWeight="SemiBold"
                                IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBoolConverter}}"/>
                        
                        <Button Content="Clear Form" 
                                Command="{Binding ClearFormCommand}" 
                                Background="#6C757D" Foreground="White" 
                                Padding="30,12" FontSize="14"
                                IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>

                    <!-- Required Fields Note -->
                    <TextBlock Text="* Required fields" FontStyle="Italic" 
                               Foreground="Gray" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#80000000" 
              Visibility="{Binding IsSubmitting, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Creating Incident..." FontSize="20" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

