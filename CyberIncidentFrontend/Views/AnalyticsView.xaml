<UserControl x:Class="CyberIncidentWPF.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Refresh Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Analytics Dashboard" FontSize="24" FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <Button Content="Refresh Data" Command="{Binding RefreshCommand}" 
                    Background="#007ACC" Foreground="White" Padding="15,8" 
                    HorizontalAlignment="Right"/>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Incidents Card -->
            <Border Grid.Column="0" Background="#007ACC" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Total Incidents" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalIncidents}" FontSize="36" Foreground="White" 
                               FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Open Incidents Card -->
            <Border Grid.Column="1" Background="#FFC107" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Open Incidents" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding OpenIncidents}" FontSize="36" Foreground="White" 
                               FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Critical Incidents Card -->
            <Border Grid.Column="2" Background="#DC3545" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Critical Incidents" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CriticalIncidents}" FontSize="36" Foreground="White" 
                               FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Resolved Incidents Card -->
            <Border Grid.Column="3" Background="#28A745" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Resolved Incidents" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ResolvedIncidents}" FontSize="36" Foreground="White" 
                               FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts and Tables -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Incidents by Type -->
            <Border Grid.Column="0" Grid.Row="0" BorderBrush="#DDD" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,0,10,10">
                <StackPanel>
                    <TextBlock Text="Incidents by Type" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding IncidentTypeStats}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding IncidentType}" Width="*"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Incidents by Severity -->
            <Border Grid.Column="1" Grid.Row="0" BorderBrush="#DDD" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Incidents by Severity" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding SeverityStats}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Severity" Binding="{Binding SeverityLevel}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="CRITICAL">
                                                <Setter Property="Foreground" Value="Red"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="HIGH">
                                                <Setter Property="Foreground" Value="Orange"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="MEDIUM">
                                                <Setter Property="Foreground" Value="#FFA500"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="LOW">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Incidents by Status -->
            <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="#DDD" 
                    BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,0">
                <StackPanel>
                    <TextBlock Text="Incidents by Status" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding StatusSummary}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" 
                                        Padding="20" Margin="0,0,15,15" Width="200">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Status}" FontSize="16" 
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Count}" FontSize="32" 
                                                   FontWeight="Bold" HorizontalAlignment="Center" 
                                                   Margin="0,5,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="OPEN">
                                                            <Setter Property="Foreground" Value="Blue"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="IN_PROGRESS">
                                                            <Setter Property="Foreground" Value="Orange"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="RESOLVED">
                                                            <Setter Property="Foreground" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="CLOSED">
                                                            <Setter Property="Foreground" Value="Gray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Grid.RowSpan="3" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading Analytics..." FontSize="20" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

