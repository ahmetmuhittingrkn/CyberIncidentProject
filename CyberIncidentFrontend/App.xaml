<Application x:Class="CyberIncidentWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:CyberIncidentWPF.ViewModels"
             xmlns:views="clr-namespace:CyberIncidentWPF.Views"
             xmlns:helpers="clr-namespace:CyberIncidentWPF.Helpers"
             StartupUri="TestWindow.xaml">
    <Application.Resources>
        <!-- Global Resources -->
        
        <!-- Value Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <!-- Data Templates for ViewModels -->
        <DataTemplate DataType="{x:Type viewmodels:IncidentListViewModel}">
            <views:IncidentListView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:CreateIncidentViewModel}">
            <views:CreateIncidentView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:AnalyticsViewModel}">
            <views:AnalyticsView/>
        </DataTemplate>

        <!-- Global Styles -->
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        
    </Application.Resources>
</Application>

